<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chinaz</title>
    <!-- Bootstrap Styles-->
    <link href="/Content/public/css/bootstrap.css" rel="stylesheet" />
    <!-- FontAwesome Styles-->
    <link href="/Content/public/css/font-awesome.css" rel="stylesheet" />
    <!-- Morris Chart Styles-->
    <link href="/Content/public/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- Custom Styles-->
    <link href="/Content/public/css/custom-styles.css" rel="stylesheet" />
    <!-- Google Fonts-->
    <link href='http://fonts.useso.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="/Content/public/js/Lightweight-Chart/cssCharts.css">
    <link rel="stylesheet" type="text/css" href="/Content/public/css/shop_management.css" />
</head>
<body style="background-color: rgb(239,240,244)">
    <div style="height:60px;">
        <div style="display:flex;">
            <div>
                <p style="font-size: 25px;margin-right:20px;">首页</p>
            </div>
            <div>
                <p style="font-size: 25px;">欢迎来到智联ERP</p>
            </div>
        </div>
    </div>
    <!--商品管理-->
    <div style="height:600px;padding:20px;">
        @*//头部*@
        <div style="width:100%;height:120px;display:flex;
         justify-content:space-between;">
            <div style="width:220px;height:120px;background-color:rgba(250,250,250,0.8);
box-shadow:0px 1px 1px 2px rgb(228,228,229);">

            </div>
            <div style="width:220px;height:120px;background-color:rgba(250,250,250,0.8);
        box-shadow:0px 1px 1px 2px rgb(228,228,229);">

            </div>
            <div style="width:400px;height:120px;background-color:rgba(250,250,250,0.8);
        box-shadow:0px 1px 1px 2px rgb(228,228,229);">

            </div>
            <div style="width:400px;height:120px;background-color:rgba(250,250,250,0.8);
        box-shadow:0px 1px 1px 2px rgb(228,228,229);">

            </div>
        </div>
        <div style="width:100%;height:100%;background-color:rgba(250,250,250,0.8);padding:20px 0 20px 0;
        margin-top:10px;">
            <div id="app" style="width:80%;height:400px;margin:0 auto;">

            </div>
        </div>
    </div>
    <script src="/Content/public/js/jquery-1.10.2.js"></script>
    <script src="/Content/public/js/bootstrap.min.js"></script>
    <script src="/Content/public/js/jquery.metisMenu.js"></script>
    <script src="/Content/public/js/morris/raphael-2.1.0.min.js"></script>
    <script src="/Content/public/js/morris/morris.js"></script>
    <script src="/Content/public/js/easypiechart.js"></script>
    <script src="/Content/public/js/easypiechart-data.js"></script>
    <script src="/Content/public/js/Lightweight-Chart/jquery.chart.js"></script>
    <script src="/Content/public/js/custom-scripts.js"></script>
    <script src="~/Scripts/echarts.js"></script>
    <script>
        //$.ajax({
        //    url: 'https://localhost:44368/api/Default/ss',
        //    type: 'GET',
        //    dataType: 'JSON',
        //    success: function (data) {
        //        console.log(data);
        //    }
        //});
        var myChart = echarts.init(document.getElementById('app'));
        var option = {
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'cross',
                    crossStyle: {
                        color: '#999'
                    }
                }
            },
            toolbox: {
                feature: {
                    dataView: { show: true, readOnly: false },
                    magicType: { show: true, type: ['line', 'bar'] },
                    restore: { show: true },
                    saveAsImage: { show: true }
                }
            },
            legend: {
                data: ['蒸发量', '降水量', '平均温度']
            },
            xAxis: [
                {
                    type: 'category',
                    data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
                    axisPointer: {
                        type: 'shadow'
                    }
                }
            ],
            yAxis: [
                {
                    type: 'value',
                    name: '水量',
                    min: 0,
                    max: 250,
                    interval: 50,
                    axisLabel: {
                        formatter: '{value} ml'
                    }
                },
                {
                    type: 'value',
                    name: '温度',
                    min: 0,
                    max: 25,
                    interval: 5,
                    axisLabel: {
                        formatter: '{value} °C'
                    }
                }
            ],
            series: [
                {
                    name: '蒸发量',
                    type: 'bar',
                    data: [2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3]
                },
                {
                    name: '降水量',
                    type: 'bar',
                    data: [2.6, 5.9, 9.0, 26.4, 28.7, 70.7, 175.6, 182.2, 48.7, 18.8, 6.0, 2.3]
                },
                {
                    name: '平均温度',
                    type: 'line',
                    yAxisIndex: 1,
                    data: [2.0, 2.2, 3.3, 4.5, 6.3, 10.2, 20.3, 23.4, 23.0, 16.5, 12.0, 6.2]
                }
            ]
        };
        myChart.setOption(option);
    </script>
</body>

</html>
