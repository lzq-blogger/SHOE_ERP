<body style="background-color: rgb(239,240,244)">
    <div style="height:60px;">
        <div style="display:flex;">
            <div>
                <p style="font-size: 25px;margin-right:20px;margin-left:20px;">首页</p>
            </div>
            <div>
                <p style="font-size: 25px;">欢迎来到智联ERP</p>
            </div>
        </div>
    </div>
    <!--商品管理-->
    <div style="height:1000px;padding:20px;">
        @*//头部*@
        <div style="width:100%;height:120px;display:flex;
         justify-content:space-between;">
            <div class="div1">
