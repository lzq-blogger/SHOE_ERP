    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>add_customerOrder</title>
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
    <style>
        html body {
            height: 100%;
        }
        .table1 tr {
            height: 60px;
