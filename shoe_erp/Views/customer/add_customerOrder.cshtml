<body>
    <div id="addmate">
        <el-dialog :visible.sync="visible" title="新增产品" width="35%" style="background-color:rgba(255, 255, 255,0.3)">
            <table class="table1">
                <tr>
                    <td>产品名称：</td>
                    <td colspan="2">
                        <el-select v-model="name" placeholder="请选择">
                            <el-option v-for="item in options" :key="item.value" :label="item.label" :value="item.value">
                            </el-option>
                        </el-select>
                    </td>
                </tr>
                <tr>
                    <td>生产数量：</td>
                    <td colspan="2">
                        <el-input-number v-model="num" :min="1" :max="10" label="描述文字"></el-input-number>
                    </td>
                    <td>
                        <el-button type="primary" style="margin-left:30px;">确定</el-button>
                    </td>
                </tr>
            </table>
        </el-dialog>
    </div>
    @*计划单*@
<div id="app" @*style="border:1px solid rgb(228, 228, 228);padding:0 30px 0px 30px;display:flex;width:100%;justify-content:space-between;"*@>
    <div style="display: flex; justify-content: space-between; margin-bottom: 10px; padding-bottom: 10px; border-bottom: 1px solid rgb(234 234 234)">
        <span style="margin-left:60px"><h4>新增</h4></span>
        <div style="margin-right:60px">
            <el-button type="primary" icon="el-icon-plus" onclick="tanchu()" style="margin-top:10px">产品</el-button>
        </div>
    </div>
</div>
    @*领料详情*@
    <div id="app1" style="padding:20px 60px;">
        <el-dialog :visible.sync="visible" title="修改产品数量" width="35%" style="background-color:rgba(255, 255, 255,0.3)">
            <table class="table1">
                <tr>
                    <td>产品数量：</td>
                    <td colspan="2">
                        <el-input-number v-model="num" :min="1" :max="100" label="描述文字"></el-input-number>
                    </td>
                    <td>
                        <el-button type="primary" style="margin-left:30px;">确定</el-button>
                    </td>
                </tr>
            </table>
        </el-dialog>
        <template>
            <el-table border="1" :data="tableData.filter(data => !search || data.name.toLowerCase().includes(search.toLowerCase()))"
                      style="width: 100%;" :header-cell-style="{background:'#eef1f6',color:'#606266'}">
                @*<el-table-column width="70px;">
                        <el-checkbox></el-checkbox>
                    </el-table-column>*@
                <el-table-column label="产品编号"
                                 prop="product_num">
                </el-table-column>
                <el-table-column label="产品名称"
                                 prop="product_name">
                </el-table-column>
                <el-table-column label="产品数量"
                                 prop="product_details_num">
                </el-table-column>
                <el-table-column label="产品价格"
                                 prop="price">
                </el-table-column>
                <el-table-column label="产品类型"
                                 prop="type">
                </el-table-column>
                <el-table-column label="产品单位"
                                 prop="unit">
                </el-table-column>
                <el-table-column align="right">
                    <template slot="header" slot-scope="scope">
                        <el-input v-model="search" placeholder="输入关键字搜索"></el-input>
                    </template>
                    <template slot-scope="scope">
                        <el-button size="mini"
                                   v-on:click="visible = !visible">编辑</el-button>
                        <el-button size="mini"
                                   type="danger"
                                   v-on:click="">删除</el-button>
                    </template>
                </el-table-column>
            </el-table>
        </template>
    </div>
    @*领料单*@
