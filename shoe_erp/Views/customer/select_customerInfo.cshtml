
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="/Content/select/css/selectshop.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="/Content/select/css/font-awesome.css?v=4.4.0" rel="stylesheet" />
    <!-- Data Tables -->
    <link href="/Content/select/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/animate.css" rel="stylesheet" />
    <link href="/Content/select/css/style.css?v=4.1.0" rel="stylesheet" />
    <script src="/Content/select/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
    <style>
        table tr .shao {
            width: 120px;
        }

        .table1 tr {
            height: 65px;
        }

            .table1 tr .tdtext {
                padding-left: 20px;
            }

        table tr .shao {
            width: 80px;
        }

        table tr .duo {
            width: 200px;
        }

        table tr td, table tr th {
            text-align: center;
        }

        table thead tr {
            background-color: rgb(52,123,183);
            color: white;
        }
        .table1 tr{
            padding:50px;
        }
        .table1 tr td {
            padding-right: 20px;
        }
    </style>
</head>
<body>
    @*修改客户信息*@
    <div id="update_num_app">
        <el-dialog :visible.sync="visible" title="修改客户信息" width="80%" style="background-color: rgba(255,255,255,0.3)">
            <div style="text-align:center;">
                <table class="table1" cellpadding="20" cellspacing="10" style="margin-left:80px">
                    <tr>
                        <td>客户名称：</td>
                        <td class="lefttd">
                            <el-input placeholder="请输入内容" v-model="name"></el-input>
                        </td>
                        <td>客户电话号码：</td>
                        <td>
                            <el-input placeholder="请输入内容" v-model="photo"></el-input>
                        </td>
                        <td>联系人：</td>
                        <td class="lefttd">
                            <el-input placeholder="请输入内容" v-model="lianxiren"></el-input>
                        </td>
                    </tr>
                    <tr>
                        <td>电子邮箱：</td>
                        <td class="lefttd">
                            <el-input placeholder="请输入内容" v-model="email"></el-input>
                        </td>
                        <td>开户银行：</td>
                        <td>
                            <el-input placeholder="请输入内容" v-model="yinhang"></el-input>
                        </td>
                        <td>客户地址：</td>
                        <td class="lefttd">
                            <el-input placeholder="请输入内容" v-model="address"></el-input>
                        </td>
                    </tr>
                    <tr>
                        <td>客户传真：</td>
                        <td>
                            <el-input placeholder="请输入内容" v-model="chuanzhen"></el-input>
                        </td>
                        <td>银行账号：</td>
                        <td>
                            <el-input placeholder="请输入内容" v-model="zhanghu"></el-input>
                        </td>
                        <td>邮政编码：</td>
                        <td>
                            <el-input placeholder="请输入内容" v-model="bianma"></el-input>
                        </td>
                    </tr>
                </table>
                <el-button type="primary" style="background-color: rgb(52,123,183);margin-top:25px" onclick='baocun()'> 保存 </el-button>
            </div>
        </el-dialog>
    </div>
    <div id="selectshop" v-loading.fullscreen.lock="fullscreenLoading">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px; padding-bottom: 10px;
       border-bottom: 1px solid rgb(234 234 234);">
            <h4>客户表</h4>
            <div id="app">
                <a style="color:white" href="/customer/add_customerInfo">
                    <el-button type="primary" icon="el-icon-plus" style="background-color: rgb(52,123,183);">
                        添加
                    </el-button>
                </a>
                <el-button type="danger" icon="el-icon-delete-solid" style="background-color: rgb(217,84,80);">删除</el-button>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            <input type="radio" name="xuan" value="Yxuan" />全选
                                        </th>
                                        <th scope="col">客户ID</th>
                                        <th scope="col">客户名称</th>
                                        <th scope="col">客户电话号码</th>
                                        <th scope="col">联系人</th>
                                        <th scope="col">电子邮箱</th>
                                        <th scope="col">客户地址</th>
                                        <th scope="col">客户传真</th>
                                        <th scope="col">邮政编码</th>
                                        <th scope="col">开户银行</th>
                                        <th scope="col">银行账号</th>
                                        <th scope="col">操作</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/Content/select/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Content/select/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/Content/select/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="/Content/select/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="/Content/select/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    <script src="/Content/select/js/content.js?v=1.0.0"></script>
    <!-- Page-Level Scripts -->
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <!-- Page-Level Scripts -->
    <script>
        //加载一秒后加载状态消失
        setTimeout(() => {
            vm.fullscreenLoading = false;
        }, 1000);
        //挂载一下
        var vm = new Vue({
            el: "#selectshop",
            data: {
                fullscreenLoading: true
            }
        })
        $(document).ready(function () {
            $('.dataTables-example').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    type: "POST",
                    url: "https://localhost:44360/api/customer/Cut",
                    "dataType": "json",
                    //"dataSrc": "data"
                },
                //columns是绑定表格数据源
                columns: [
                    { data: null },
                    { data: "customer_id" },
                    { data: "customer_name" },
                    { data: "customer_phone" },
                    { data: "customer_linkman" },
                    { data: "customer_email" },
                    { data: "customer_address" },
                    { data: "customer_fax" },
                    { data: "customer_postcode" },
                    { data: "bank" },
                    { data: "bank_account" },
                    { data: null }
                ],
                "aoColumnDefs": [{
                    "targets": -1, //操作按钮目标列
                    //"orderable": false,
                    //"data": null,
                    "render": function (data, type, row) {
                        var id = row.customer_id;
                        var html = "<div class='btn-group'>";
                        html += "<button class='btn btn-warning btn-sm' onclick='bianji(\"" + id + "\")'>编辑</button>";
                        html += "</div>";
                        return html;
                    }
                }, {
                    "targets": 0,
                    "render": function () {
                        var html = "<div class='btn-group' id='app1'>";
                        html += "<input type='checkbox' value='' />";
                        html += "</div>";
                        return html;
                    }
                }]
            });
        });
        new Vue({
            el: "#app",
            data: {

            }
        })
        var vm3 = new Vue({
            el: "#update_num_app",
            data: {
                id:"",
                name: "",
                photo: "",
                email: "",
                lianxiren: "",
                yinhang: "",
                address: "",
                chuanzhen: "",
                zhanghu: "",
                bianma: "",
                visible: false
            }
        })
        //获取要修改的信息
        function bianji(id) {
            vm3.visible = true;
            $.ajax({
                type: "post",
                contentType: "application/x-www-form-urlencoded;charset=UTF-8",
                url: "https://localhost:44360/api/customer/Updatecustomer?customer_id=" + id ,
                dataType: "json",
                data: {customer_id:id},
                success: function (data) {
                    var info = eval(data);
                    for (var i = 0; i < info.length; i++) {
                        vm3.id = id;
                        vm3.name = info[i].customer_name;
                        vm3.photo = info[i].customer_phone;
                        vm3.lianxiren = info[i].customer_linkman;
                        vm3.email = info[i].customer_email;
                        vm3.yinhang = info[i].bank;
                        vm3.address = info[i].customer_address;
                        vm3.chuanzhen = info[i].customer_fax;
                        vm3.zhanghu = info[i].bank_account;
                        vm3.bianma = info[i].customer_postcode;
                    }
                }
            })
        }
        //修改客户信息
        function baocun() {
            vm.fullscreenLoading = true;
            var json1 = {
                "customer_id": vm3.id,
                "customer_name": vm3.name,
                "customer_phone": vm3.photo,
                "customer_linkman": vm3.lianxiren,
                "customer_email": vm3.email,
                "customer_address": vm3.address,
                "customer_fax": vm3.chuanzhen,
                "customer_postcode": vm3.bianma,
                "bank": vm3.yinhang,
                "bank_account":vm3.zhanghu
            };
            var json2 = JSON.stringify(json1);
            $.ajax({
                type: "post",
                contentType: "application/x-www-form-urlencoded;charset=UTF-8",
                url: "https://localhost:44360/api/customer/UpCustomer?json=" + json2,
                dataType: "json",
                data: { json: json2 },
                success: function (data) {
                    var info = eval(data);
                    console.log(info)
                    for (var i = 0; i < info.length; i++) {
                        vm3.name = info[i].customer_name;
                        vm3.photo = info[i].customer_phone;
                        vm3.lianxiren = info[i].customer_linkman;
                        vm3.email = info[i].customer_email;
                        vm3.yinhang = info[i].bank;
                        vm3.address = info[i].customer_address;
                        vm3.chuanzhen = info[i].customer_fax;
                        vm3.zhanghu = info[i].bank_account;
                        vm3.bianma = info[i].customer_postcode;
                    }
                }
            })
            //效果展示
            setTimeout(() => {
                vm.fullscreenLoading = false;
                const h = vm3.$createElement;
                vm3.$notify({
                    title: '修改用户信息',
                    message: h('i', { style: 'color: teal' }, '修改用户信息成功')
                });
                setTimeout(() => {
                    //跳转到计划查询页面
                    window.location.href = "@Url.Content("~/customer/select_customerInfo/")";
                }, 1000);
            }, 1000);
        }
    </script>
</body>
</html>
