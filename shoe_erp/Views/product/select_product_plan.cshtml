
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="/Content/select/css/selectshop.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="/Content/select/css/font-awesome.css?v=4.4.0" rel="stylesheet" />
    <!-- Data Tables -->
    <link href="/Content/select/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/animate.css" rel="stylesheet" />
    <link href="/Content/select/css/style.css?v=4.1.0" rel="stylesheet" />
    <script src="/Content/select/js/bootstrap.min.js"></script>
    <style>
        table tr .shao {
            width: 120px;
        }
        .table1 tr {
            height: 65px;
        }

            .table1 tr .tdtext {
                padding-left: 20px;
            }

        table tr .shao {
            width: 120px;
        }

        table tr td, table tr th {
            text-align: center;
        }
        table thead tr {
            background-color: rgb(239,240,244);
        }
    </style>
    @*elementui*@
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
</head>
<body>
    @*修改*@
    <div id="update_app">
        <el-dialog :visible.sync="visible" title="生产计划详情" width="40%" style="background-color: rgba(255,255,255,0.3)">
            <div style="text-align:center;">
                <el-select v-model="status" placeholder="请选择">
                    <el-option v-for="item in options" :key="item.value" :label="item.label" :value="item.value"></el-option>
                </el-select>
                <el-button type="primary" style="background-color: rgb(52,123,183);"> 保存 </el-button>
            </div>
        </el-dialog>
    </div>
    @*详情*@
    <div id="edit_app">
        <el-dialog :visible.sync="visible" title="生产计划详情" width="75%" style="background-color: rgba(255,255,255,0.3)">
            <template>
                <el-table border="1" :data="tableData.filter(data => !search || data.product_name.toLowerCase().includes(search.toLowerCase()))"
                          style="width: 1000px;" :header-cell-style="{background:'#eef1f6',color:'#606266'}">
                    <el-table-column label="计划详情ID" width="120px"
                                     prop="product_plan_details_id">
                    </el-table-column>
                    <el-table-column label="产品名" width="160px"
                                     prop="product_name">
                    </el-table-column>
                    <el-table-column label="产品类型" width="80px"
                                     prop="product_type">
                    </el-table-column>
                    <el-table-column label="单价" width="100px"
                                     prop="product_price">
                    </el-table-column>
                    <el-table-column label="生产数量"
                                     prop="product_details_num">
                    </el-table-column>
                    <el-table-column label="单位"
                                     prop="unit">
                    </el-table-column>
                    <el-table-column label="处理状态"
                                     prop="pro_status">
                    </el-table-column>
                    <el-table-column align="center"  width="200px">
                        <template slot="header" slot-scope="scope">
                            <el-input v-model="search" placeholder="输入关键字搜索"></el-input>
                        </template>
                        <template slot-scope="scope">
                            <el-button size="mini"
                                       type="danger"
                                       v-on:click="handleEdit(scope.row)">修改</el-button>
                            <el-button size="mini"
                                       type="danger"
                                       v-on:click="handleDelete(scope.row)">删除</el-button>
                        </template>
                    </el-table-column>
                </el-table>
            </template>
        </el-dialog>
    </div>
    @*查询所有计划*@
    <div id="selectshop">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px; padding-bottom: 10px;
          border-bottom: 1px solid rgb(234 234 234)">
            <h4>产品登记表</h4>
            <div id="app">
                <a style="color:white" href="/product/add_product_plan">
                    <el-button type="primary" icon="el-icon-plus" style="background-color: rgb(52,123,183);">
                        添加
                    </el-button>
                </a>
                <el-button type="danger" icon="el-icon-delete-solid" style="background-color: rgb(217,84,80);">删除</el-button>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th scope="col" class="shao">
                                            <input type="radio" name="xuan" value="Yxuan" />全选&nbsp;&nbsp;
                                            <input type="radio" name="xuan" value="Nxuan" />全不选
                                        </th>
                                        <th scope="col">生产计划ID</th>
                                        <th scope="col">订单号</th>
                                        <th scope="col">操作人</th>
                                        <th scope="col">计划生产时间</th>
                                        <th scope="col">计划结束时间</th>
                                        <th scope="col">操作</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/Content/select/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Content/select/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/Content/select/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="/Content/select/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="/Content/select/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    <script src="/Content/select/js/content.js?v=1.0.0"></script>
    <!-- Page-Level Scripts -->
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {
            //$('.dataTables-example').dataTable();
            $('.dataTables-example').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    type: "POST",
                    url: "https://localhost:44360/api/product/pro_plan",
                    "dataType": "json",
                    //"dataSrc": "data"
                },
                //columns是绑定表格数据源
                columns: [
                    { data: null },
                    { data: "product_plan_id" },
                    { data: "order_id" },
                    { data: "operator_per" },
                    { data: "product_time" },
                    { data: "product_end_time" },
                    { data: null }
                ],
                "aoColumnDefs": [{
                    "targets": -1, //操作按钮目标列
                    "orderable": false,
                    "data": null,
                    "render": function (data, type, row) {
                        var id = row.product_plan_id;
                        var html = "<div class='btn-group'>";
                        html += "<button class='btn btn-primary btn-sm' onclick='xinagqtanchuan(" + id + ")'>详情</button>";
/*                        html += "<button class='btn btn-warning btn-sm' onclick='bianji(" + id + ")'>编辑</button>";*/
                        html += "<button class='btn btn-danger btn-sm' onclick='btn_row_del(" + id + ")'>删除</button>";
                        html += "</div>";
                        return html;
                    }
                }, {
                    "targets": 0,
                    "render": function () {
                        var html = "<div class='btn-group'>";
                        html += "<input type='checkbox' value='' style='width:15px;height:15px;box-shadow: 0px 1px 10px 3px rgb(228,228,229);'/>";
                        html += "</div>";
                        return html;
                    }
                }]
            });
        });
        var vm1 = new Vue({
            el: "#app",
            data: {

            }
        });
        var vm2 = new Vue({
            el: "#edit_app",
            data() {
                return {
                    tableData: [],
                    search: '',
                    visible: false,
                    num: 1,
                }
            },
            methods: {
                handleEdit(row) {
                    console.log(row);
                    vm3.visible = true;
                },
                handleDelete(row) {
                    console.log(row);
                }
            },
        })
        var vm3 = new Vue({
            el: "#update_app",
            data: {
                status: '未处理',
                visible:false
            }
        })
        function xinagqtanchuan(id) {
            vm2.visible = true;
            $.ajax({
                type: "Get",
                url: "https://localhost:44360/api/product/pro_plan_detail?id="+id,
                dataType: "json",
                success: function (data) {
                    vm2.tableData = eval(data);
                }
            })
        }
    </script>
</body>
</html>
