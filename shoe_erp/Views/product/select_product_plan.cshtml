
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="/Content/select/css/selectshop.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="/Content/select/css/font-awesome.css?v=4.4.0" rel="stylesheet" />
    <!-- Data Tables -->
    <link href="/Content/select/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/animate.css" rel="stylesheet" />
    <link href="/Content/select/css/style.css?v=4.1.0" rel="stylesheet" />
    <script src="/Content/select/js/bootstrap.min.js"></script>
    <style>
        table tr .shao {
            width: 120px;
        }
        .table1 tr {
            height: 65px;
        }

            .table1 tr .tdtext {
                padding-left: 20px;
            }

        table tr .shao {
            width: 120px;
        }

        table tr td, table tr th {
            text-align: center;
        }
        table thead tr {
            background-color: rgb(239,240,244);
        }
    </style>
    @*elementui*@
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
</head>
<body>
    <div id="app1">
        <el-dialog :visible.sync="visible" title="新增生产计划" width="53%">
            <table class="table1">
                <tr>
                    <td>请选择商品订单号：</td>
                    <td>
                        <el-select v-model="value" placeholder="请选择">
                            <el-option v-for="item in options" :key="item.value" :label="item.label" :value="item.value">
                            </el-option>
                        </el-select>
                    </td>
                </tr>
                <tr>
                    <td>预产数量：</td>
                    <td>
                        <el-input-number v-model="num" :min="1" :max="200" label="描述文字"></el-input-number>
                    </td>
                    <td class="tdtext">操作人：</td>
                    <td>
                        <el-input placeholder="请输入内容" v-model="input" clearable></el-input>
                    </td>
                </tr>
                <tr>
                    <td>预计生产时间：</td>
                    <td>
                        <el-date-picker v-model="value1" type="date" placeholder="选择日期"> </el-date-picker>
                    </td>
                    <td class="tdtext">预计结束时间</td>
                    <td>
                        <el-date-picker v-model="value1" type="date" placeholder="选择日期"> </el-date-picker>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"  style="text-align:center;">
                        <el-button type="primary"  style="background-color: rgb(52,123,183);">确定</el-button>
                    </td>
                    <td colspan="2">
                        <el-button type="danger"  style="background-color: rgb(217,84,80);">重置</el-button>
                    </td>
                </tr>
            </table>
        </el-dialog>
    </div>
    <div id="selectshop">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px; padding-bottom: 10px; border-bottom: 1px solid rgb(234 234 234)">
            <h4>产品登记表</h4>
            <div id="app">
                <el-button type="primary" icon="el-icon-plus" onclick="tanchu()"  style="background-color: rgb(52,123,183);">添加</el-button>
                <el-button type="danger" icon="el-icon-delete-solid" style="background-color: rgb(217,84,80);">删除</el-button>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th scope="col" class="shao">
                                            <input type="radio" name="xuan" value="Yxuan" />全选&nbsp;&nbsp;
                                            <input type="radio" name="xuan" value="Nxuan" />全不选
                                        </th>
                                        <th scope="col">生产计划ID</th>
                                        <th scope="col">操作人</th>
                                        <th scope="col">计划生产时间</th>
                                        <th scope="col">计划结束时间</th>
                                        <th scope="col">处理状态</th>
                                        <th scope="col">操作</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/Content/select/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Content/select/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/Content/select/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="/Content/select/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="/Content/select/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    <script src="/Content/select/js/content.js?v=1.0.0"></script>
    <!-- Page-Level Scripts -->
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <!-- Page-Level Scripts -->
    <script>
         $(document).ready(function () {
             //$('.dataTables-example').dataTable();
             $('.dataTables-example').dataTable({
                 "processing": true,
                 "serverSide": true,
                 "ajax": {
                     type: "POST",
                     url: "https://localhost:44360/api/product/pro_plan",
                     "dataType": "json",
                     //"dataSrc": "data"
                 },
                 //columns是绑定表格数据源
                 columns: [
                     { data: null },
                     { data: "product_plan_id" },
                     { data: "operator_per" },
                     { data: "product_time" },
                     { data: "product_end_time" },
                     { data: "status" },
                     { data: null }
                 ],
                 "aoColumnDefs": [{
                     "targets": -1, //操作按钮目标列
                     "orderable": false,
                     "data": null,
                     "render": function (data, type, row) {
                         var id = row.materialr_plan_id;
                         var html = "<div class='btn-group'>";
                         html += "<button class='btn btn-primary btn-sm' onclick='btn_row_edit(" + id + ")'><span class='glyphicon glyphicon - edit'></span> 详情<tton>";
                         html += "<button class='btn btn-warning btn-sm' onclick='btn_row_edit(" + id + ")'><span class='glyphicon glyphicon-edit'></span> 编辑<tton>";
                         html += "<button class='btn btn-danger btn-sm' onclick='btn_row_del(" + id + ")'><span class='glyphicon glyphicon-trash'></span> 删除<tton>";
                         html += "</div>";
                         return html;
                     }
                 }, {
                     "targets": 0,
                     "render": function () {
                         var html = "<div class='btn-group'>";
                         html += "<input type='checkbox' value='' style='width:15px;height:15px;box-shadow: 0px 1px 10px 3px rgb(228,228,229);'/>";
                         html += "</div>";
                         return html;
                     }
                 }]
             });
         });

        var vm1 = new Vue({
            el: "#app",
            data: {

            }
        });

        var vm = new Vue({
            el: '#app1',
            data: function () {
                return {
                    visible: false,
                    input: "",
                    num: '',
                    options: [{
                        value: '选项1',
                        label: '黄金糕'
                    }, {
                        value: '选项2',
                        label: '双皮奶'
                    }],
                    value: '',
                    pickerOptions: {
                        disabledDate(time) {
                            return time.getTime() > Date.now();
                        },
                    },
                    value1: '',
                    value2: '',
                }
            },
            methods: {
                handleChange(value) {
                    console.log(value);
                }
            }
        });

        function tanchu() {
            vm.visible = true;
        }

        function xinagqtanchuan() {

