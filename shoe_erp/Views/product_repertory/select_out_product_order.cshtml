
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="/Content/select/css/selectshop.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="/Content/select/css/font-awesome.css?v=4.4.0" rel="stylesheet" />
    <!-- Data Tables -->
    <link href="/Content/select/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="/Content/select/css/animate.css" rel="stylesheet" />
    <link href="/Content/select/css/style.css?v=4.1.0" rel="stylesheet" />
    <script src="/Content/select/js/bootstrap.min.js"></script>
    @*elementui*@
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
    <style>
        table tr .shao {
            width: 120px;
        }

        table tr td, table tr th {
            text-align: center;
        }

        table thead tr {
            background-color: rgb(239,240,244);
        }
    </style>
</head>
<body>
    @*详情*@
    <div id="edit_app">
        <el-dialog :visible.sync="visible" title="产品出库详情" width="75%" style="background-color: rgba(255,255,255,0.3)">
            <template>
                <el-table border="1" :data="tableData.filter(data => !search || data.product_name.toLowerCase().includes(search.toLowerCase()))"
                          style="width: 1000px;" :header-cell-style="{background:'#eef1f6',color:'#606266'}">
                    <el-table-column label="产品名" width="140px"
                                     prop="product_name">
                    </el-table-column>
                    <el-table-column label="产品价格" width="160px"
                                     prop="product_price">
                    </el-table-column>
                    <el-table-column label="产品数量" width="80px"
                                     prop="quantity">
                    </el-table-column>
                    <el-table-column label="客户名" width="300px"
                                     prop="customer_name">
                    </el-table-column>
                    <el-table-column label="客户电话"
                                     prop="customer_phone">
                    </el-table-column>
                    <el-table-column align="center" width="200px">
                        <template slot="header" slot-scope="scope">
                            <el-input v-model="search" placeholder="输入关键字搜索"></el-input>
                        </template> 
                    </el-table-column>
                </el-table>
            </template>
        </el-dialog>
    </div>
    <div id="selectshop">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px; padding-bottom: 10px; border-bottom: 1px solid rgb(234 234 234)">
            <h4>产品出库登记表</h4>
            <div id="app">
                <el-button type="danger" icon="el-icon-delete-solid">删除</el-button>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th scope="col" class="shao">
                                            <input type="radio" name="xuan" value="Yxuan" />全选&nbsp;&nbsp;
                                            <input type="radio" name="xuan" value="Nxuan" />全不选
                                        </th>
                                        <th scope="col">出库ID</th>
                                        <th scope="col">订单ID</th>
                                        <th scope="col">操作人</th>
                                        <th scope="col">出库日期</th>
                                        <th scope="col">操作</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/Content/select/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Content/select/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="/Content/select/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="/Content/select/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="/Content/select/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    <script src="/Content/select/js/content.js?v=1.0.0"></script>
    <!-- Page-Level Scripts -->
    <!-- Page-Level Scripts -->
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script>
        $(document).ready(function () {
            //$('.dataTables-example').dataTable();
            $('.dataTables-example').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    type: "POST",
                    url: "https://localhost:44360/api/pro_repertory/select_out_product",
                    "dataType": "json",
                    //"dataSrc": "data"
                },
                //columns是绑定表格数据源
                columns: [
                    { data: null },
                    { data: "out_repertory_id" },
                    { data: "orderr_id" },
                    { data: "operator_per" },
                    { data: "out_time" },
                    { data: null }
                ],
                "aoColumnDefs": [{
                    "targets": -1, //操作按钮目标列
                    //"orderable": false,
                    //"data": null,
                    "render": function (data, type, row) {
                        var id = row.out_repertory_id;
                        var html = "<div class='btn-group'>";
                        html += "<button class='btn btn-primary btn-sm' onclick='xinagqtanchuan(" + id + ")'>详情</button>";
                        html += "<button class='btn btn-danger btn-sm' onclick='btn_row_del(" + id + ")'>删除</button>";
                        html += "</div>";
                        return html;
                    }
                }, {
                    "targets": 0,
                    "render": function () {
                        var html = "<div class='btn-group' id='app1'>";
                        html += "<input type='checkbox' value=''  style='width:15px;height:15px;box-shadow: 0px 1px 10px 3px rgb(228,228,229);'/>";
                        html += "</div>";
                        return html;
                    }
                }]
            });
        });
        var vm1 = new Vue({
            el: "#app",
            data: {

            }
        });
        var vm2 = new Vue({
            el: "#edit_app",
            data() {
                return {
                    tableData: [],
                    search: '',
                    visible: false,
                    num: 1,
                }
            }
        })
        function xinagqtanchuan(id) {
            vm2.visible = true;
            $.ajax({
                type: "Get",
                url: "https://localhost:44360/api/pro_repertory/select_out_product_details?id=" + id,
                dataType: "json",
                success: function (data) {
                    vm2.tableData = eval(data);
                }
            })
        }
    </script>

</body>
</html>
